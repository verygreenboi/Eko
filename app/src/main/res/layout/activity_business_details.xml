<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ng.codehaven.eko.ui.activities.BusinessDetailsActivity">

    <include
        android:id="@+id/homeToolBar"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/homeToolBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/businessLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />

            <RelativeLayout
                android:id="@+id/metaWrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:layout_alignBottom="@+id/businessLogo">

                <View
                    android:id="@+id/metaScim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ng.codehaven.eko.ui.views.CustomTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="78dp"
                    style="@style/titleSmallTextViewStyle"
                    android:maxLines="2"
                    android:textSize="100sp"
                    android:textColor="@color/primary_text_default_material_dark"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
